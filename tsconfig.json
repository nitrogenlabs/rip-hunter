{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "lib": [
      "dom",
      "es2015",
      "es5",
      "es6",
      "es7",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "removeComments": true,
    "skipLibCheck": true,
    "target": "ES5",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/json-d-ts"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.test.*",
    "./lib",
    "./node_modules",
    "./test"
  ]
}